<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/margin_extra_large"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_medium"
        android:textColor="@color/gray_20"
        android:text="CONNECTIONS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_90"
        android:padding="@dimen/margin_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="left"
            app:tint="@color/gray_20"
            android:src="@drawable/ic_baseline_facebook_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/margin_medium"
            android:text="Facebook"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_large"
        android:background="@color/gray_90"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_twitter"
            app:tint="@color/gray_20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/margin_medium"
            android:text="Twitter"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:textColor="@color/gray_20"
        android:paddingLeft="@dimen/margin_large"
        android:paddingTop="@dimen/margin_small"
        android:text="Connect your favorite social media services to automatically share new posts with friends" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_20"
        android:paddingLeft="@dimen/margin_large"
        android:text="SHARING BUTTONS" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Manage"
        android:paddingLeft="@dimen/margin_large"
        android:background="@color/gray_90"
        android:textColor="@color/white"
        android:gravity="center_vertical"/>


</LinearLayout>